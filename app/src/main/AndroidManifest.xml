        <activity
            android:name="com.teknei.bid1.activities.SettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.teknei.bid1.activities.ConsultActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.teknei.bid1.activities.BaseActivity" />
