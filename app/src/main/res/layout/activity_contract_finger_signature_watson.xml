<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/cfs_wat_lay_fingerprint_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ico_sabadell"
            android:scaleType="centerInside" />

        <TextView
            style="@style/normalBlackFont"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cfs_mso_tv_instructions"
            android:layout_marginBottom="60dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/cfs_wat_image_view_preview"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"/>

        </LinearLayout>

        <Button
            style="@style/normalWhiteFontBTN"
            android:id="@+id/cfs_wat_b_capture_fingerprint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lfw_b_capture_fingerprint"
            android:background="@drawable/selector_rounded_rectangle_login"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/lay_user_pass_section"
            />

    </LinearLayout>

    <Button
        style="@style/normalWhiteFontBTN"
        android:id="@+id/cfs_wat_b_continue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_form"
        android:layout_alignParentBottom="true"
        android:text="@string/continue_form"
        android:textColor="@color/text_color_white"
        android:background="@drawable/selector_primary_button"/>

</RelativeLayout>

