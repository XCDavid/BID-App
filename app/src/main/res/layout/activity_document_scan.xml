<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ico_sabadell"
        android:scaleType="centerInside" />

    <TextView
        style="@style/normalBlackFont"
        android:textSize="25sp"
        android:id="@+id/tv_document_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/instructions_document_scan"        />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/b_continue_document_scan"
        android:layout_below="@+id/tv_document_instructions"
        >

        <TextView
            style="@style/normalBlackFont"
            android:textSize="18sp"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_constrain_document_scan"
            android:layout_marginLeft="@dimen/margin_constrain_document_scan"
            android:layout_marginRight="@dimen/margin_constrain_document_scan"
            android:layout_marginStart="@dimen/margin_constrain_document_scan"
            android:gravity="center"
            android:text="@string/document_instruction_document_scan"
            app:layout_constraintBottom_toTopOf="@+id/ib_document_scan"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageButton
            android:id="@+id/ib_document_scan"
            android:layout_width="@dimen/width_document_scan_button"
            android:layout_height="@dimen/height_document_scan_buton"
            android:adjustViewBounds="true"
            android:background="@drawable/selector_image_button"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.274" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_photo_camera"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/ib_document_scan"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/ib_document_scan"
            android:layout_marginTop="8dp"
            android:id="@+id/imageViewCameraDocument"
            app:layout_constraintTop_toTopOf="@+id/ib_document_scan"
            app:layout_constraintBottom_toBottomOf="@+id/ib_document_scan"
            android:layout_marginBottom="8dp" />

        <TextView
            style="@style/normalBlackFont"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/instruction_clue_document_scan"
            android:layout_marginTop="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/imageViewCameraDocument"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewCameraDocument"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/imageViewCameraDocument" />
    </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <Button
        style="@style/normalWhiteFontBTN"
        android:id="@+id/b_continue_document_scan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_form"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_primary_button"
        android:text="@string/continue_document_scan"/>

</RelativeLayout>
