<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_face_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/instructions_face_scan"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="@dimen/margin_top_bottom_id_scan"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_face_instructions"
        android:layout_above="@+id/b_continue_face_scan"

        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_constrain_face_scan"
            android:layout_marginEnd="@dimen/margin_constrain_face_scan"
            android:layout_marginLeft="@dimen/margin_constrain_face_scan"
            android:layout_marginRight="@dimen/margin_constrain_face_scan"
            android:layout_marginStart="@dimen/margin_constrain_face_scan"
            android:gravity="center"
            android:text="@string/picture_face_face_scan"
            app:layout_constraintBottom_toTopOf="@+id/ib_face_scan"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageButton
            android:id="@+id/ib_face_scan"
            android:layout_width="@dimen/width_face_scan_button"
            android:layout_height="@dimen/height_face_scan_buton"
            android:adjustViewBounds="true"
            android:background="@drawable/selector_image_button"
            android:padding="@dimen/padding_all_image_buton_scan_face"
            android:scaleType="fitCenter"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:srcCompat="@drawable/ic_camera_front"
            android:scaleType="centerCrop"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/ib_face_scan"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/ib_face_scan"
            app:layout_constraintTop_toTopOf="@+id/ib_face_scan"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/ib_face_scan"
            android:layout_marginBottom="80dp"
            android:id="@+id/imageViewFace"
            app:layout_constraintHorizontal_bias="0.504"
            android:visibility="visible"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_photo_camera"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/ib_face_scan"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/ib_face_scan"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="50dp"
            android:id="@+id/imageViewCameraFace"

            app:layout_constraintTop_toBottomOf="@+id/imageViewFace"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/instruction_clue_face_scan"
            android:layout_marginTop="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/imageViewCameraFace"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewCameraFace"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/imageViewCameraFace" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/b_continue_face_scan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_form"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_primary_button"
        android:text="@string/continue_id_scan"
        android:textColor="@color/text_color_white" />
</RelativeLayout>
