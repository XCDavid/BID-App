<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="100dp"
            android:src="@drawable/ico_sabadell"
            android:scaleType="centerInside" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="100dp"
            android:src="@drawable/logo_ine"
            android:scaleType="centerInside"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/brand_protection" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="120dp"
        android:layout_above="@+id/b_continue_fake_ine">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width  ="210dp"
                android:layout_height ="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_front_face"
                    android:layout_width="200dp"
                    android:layout_height="270dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="fitCenter"
                    />

                <ImageView
                    android:id="@+id/iv_id_front"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="fitCenter"/>

                <ImageView
                    android:id="@+id/iv_id_back"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="fitCenter"/>
            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/normalBlackFont"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/tv_name_validation_ine"/>

                <TextView
                    style="@style/normalBlackFont"
                    android:textSize="15sp"
                    android:id="@+id/tv_name_fake_ine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/tv_name_example_validation_ine" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/normalBlackFont"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/tv_fs_validation_ine"/>

                <TextView
                    style="@style/normalBlackFont"
                    android:textSize="15sp"
                    android:id="@+id/tv_first_ap_fake_ine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/tv_fs_example_validation_ine"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/normalBlackFont"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/tv_ss_validation_ine"/>

                <TextView
                    style="@style/normalBlackFont"
                    android:textSize="15sp"
                    android:id="@+id/tv_second_ap_fake_ine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/tv_ss_example_validation_ine" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/normalBlackFont"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/tv_curp_validation_ine" />

                <TextView
                    style="@style/normalBlackFont"
                    android:textSize="15sp"
                    android:id="@+id/tv_curp_fake_ine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/tv_curp_example_validation_ine"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/normalBlackFont"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/tv_ocr_validation_ine" />

                <TextView
                    style="@style/normalBlackFont"
                    android:textSize="15sp"
                    android:id="@+id/tv_ocr_fake_ine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/tv_ocr_example_validation_ine" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/normalBlackFont"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/tv_validity_validation_ine"/>

                <TextView
                    style="@style/normalBlackFont"
                    android:textSize="15sp"
                    android:id="@+id/tv_validity_fake_ine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/tv_validity_example_validation_ine" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/normalBlackFont"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/tv_address_validation_ine"/>

                <TextView
                    style="@style/normalBlackFont"
                    android:textSize="15sp"
                    android:id="@+id/tv_address_fake_ine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/tv_address_example_validation_ine" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/normalBlackFont"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/tv_coincidence_validation_ine"/>

                <TextView
                    style="@style/normalBlackFont"
                    android:textSize="15sp"
                    android:id="@+id/tv_coincidence_points_fake_ine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/tv_coincidence_example_validation_ine"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <Button
                    style="@style/normalWhiteFontBTN"
                    android:id="@+id/b_resume_fake_ine"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_rounded_rectangle_login"
                    android:layout_weight="1"
                    android:text="@string/b_resume_validation_ine" />

                <Button
                    style="@style/normalWhiteFontBTN"
                    android:id="@+id/b_validate_fake_ine"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_rounded_rectangle_login"
                    android:layout_weight="1"
                    android:text="@string/b_validate_validation_ine" />

            </LinearLayout>
        </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        style="@style/normalWhiteFontBTN"
        android:id="@+id/b_continue_fake_ine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_form"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_primary_button"
        android:text="@string/continue_fake_ine"
        android:textColor="@color/text_color_white" />
</RelativeLayout>