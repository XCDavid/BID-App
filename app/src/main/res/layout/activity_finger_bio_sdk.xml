<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/b_continue_bio_sdk"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_top_bottom_id_scan"
        android:paddingTop="@dimen/margin_top_bottom_id_scan">

        <Switch
            android:id="@+id/sw_id_hand_side"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/fragment"
            android:layout_gravity="end"
            android:textColor="#000000"
            android:textOff="Derecha"
            android:textOn="Izquierda" />

        <TextView
            android:id="@+id/tv_hand_bio_sdk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/bio_sdk_message_right"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <RelativeLayout
            android:id="@+id/ln_take_finger"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <fragment class="com.morpho.contactless.view.fragment.BaseFingerCameraFragment"
                android:id="@+id/fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/finger_capture_fragment"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="1.0"
                android:layout_marginTop="@dimen/margin_top_bottom_id_scan"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"/>

            <ImageView
                android:id="@+id/i_take_image_bio_sdk"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:background="@drawable/selector_image_button"
                app:srcCompat="@drawable/ic_photo_camera_v1"
                />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/b_continue_bio_sdk"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_form"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_primary_button"
        android:text="@string/bio_sdk_continue"
        android:textColor="@color/text_color_white" />

</RelativeLayout>