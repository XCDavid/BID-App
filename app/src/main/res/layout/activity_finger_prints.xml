<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ly_tv_instructions_fingerprints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            style="@style/normalBlackFont"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/instruction_begin_fingerprints_scan" />

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cly_fingerprints"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/ly_tv_instructions_fingerprints">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/margin_all_image_view_fingerprints"
            android:layout_marginEnd="@dimen/margin_all_image_view_fingerprints"
            android:layout_marginLeft="@dimen/margin_all_image_view_fingerprints"
            android:layout_marginRight="@dimen/margin_all_image_view_fingerprints"
            android:layout_marginStart="@dimen/margin_all_image_view_fingerprints"
            android:layout_marginTop="@dimen/margin_all_image_view_fingerprints"
            android:adjustViewBounds="true"
            android:src="@drawable/hands"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:id="@+id/imageView" />
        <!--Left Arm-->
        <ImageButton
            android:id="@+id/b_thumb_left_arm"
            android:layout_width="@dimen/width_thumb_finger"
            android:layout_height="@dimen/height_thumb_finger"
            android:layout_marginBottom="116dp"
            android:layout_marginStart="@dimen/thumb_left_margin_left"
            android:adjustViewBounds="true"
            android:background="@drawable/selector__transparent_image_button"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="400dp" />
        <ImageButton
            android:id="@+id/b_index_left_arm"
            android:layout_width="@dimen/width_index_finger"
            android:layout_height="@dimen/height_index_finger"
            android:layout_marginBottom="@dimen/index_left_margin_bottom"
            android:layout_marginStart="@dimen/index_left_margin_left"
            android:adjustViewBounds="true"
            android:background="@drawable/selector__transparent_image_button"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
        <ImageButton
            android:id="@+id/b_middle_left_arm"
            android:layout_width="@dimen/width_index_finger"
            android:layout_height="@dimen/height_index_finger"
            android:layout_marginBottom="@dimen/middle_left_margin_bottom"
            android:layout_marginStart="@dimen/middle_left_margin_left"
            android:adjustViewBounds="true"
            android:background="@drawable/selector__transparent_image_button"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
        <ImageButton
            android:id="@+id/b_ring_left_arm"
            android:layout_width="@dimen/width_index_finger"
            android:layout_height="@dimen/height_index_finger"
            android:layout_marginBottom="@dimen/ring_left_margin_bottom"
            android:layout_marginStart="@dimen/ring_left_margin_left"
            android:adjustViewBounds="true"
            android:background="@drawable/selector__transparent_image_button"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
        <ImageButton
            android:id="@+id/b_pinky_left_arm"
            android:layout_width="@dimen/width_index_finger"
            android:layout_height="@dimen/height_index_finger"
            android:layout_marginBottom="@dimen/pinky_left_margin_bottom"
            android:layout_marginStart="@dimen/pinky_left_margin_left"
            android:adjustViewBounds="true"
            android:background="@drawable/selector__transparent_image_button"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <!--Right Arm-->
        <ImageButton
            android:id="@+id/b_thumb_right_arm"
            android:layout_width="@dimen/width_thumb_finger"
            android:layout_height="@dimen/height_thumb_finger"
            android:layout_marginBottom="@dimen/thumb_left_margin_bottom"
            android:layout_marginEnd="@dimen/thumb_right_margin_left"
            android:adjustViewBounds="true"
            android:background="@drawable/selector__transparent_image_button"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        <ImageButton
            android:id="@+id/b_index_right_arm"
            android:layout_width="@dimen/width_index_finger"
            android:layout_height="@dimen/height_index_finger"
            android:layout_marginBottom="@dimen/index_left_margin_bottom"
            android:layout_marginEnd="@dimen/index_right_margin_left"
            android:adjustViewBounds="true"
            android:background="@drawable/selector__transparent_image_button"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        <ImageButton
            android:id="@+id/b_middle_right_arm"
            android:layout_width="@dimen/width_index_finger"
            android:layout_height="@dimen/height_index_finger"
            android:layout_marginBottom="@dimen/middle_left_margin_bottom"
            android:layout_marginEnd="@dimen/middle_right_margin_left"
            android:adjustViewBounds="true"
            android:background="@drawable/selector__transparent_image_button"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        <ImageButton
            android:id="@+id/b_ring_riht_arm"
            android:layout_width="@dimen/width_index_finger"
            android:layout_height="@dimen/height_index_finger"
            android:layout_marginBottom="@dimen/ring_left_margin_bottom"
            android:layout_marginEnd="@dimen/ring_right_margin_left"
            android:adjustViewBounds="true"
            android:background="@drawable/selector__transparent_image_button"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        <ImageButton
            android:id="@+id/b_pinky_right_arm"
            android:layout_width="@dimen/width_index_finger"
            android:layout_height="@dimen/height_index_finger"
            android:layout_marginBottom="@dimen/pinky_left_margin_bottom"
            android:layout_marginEnd="@dimen/pinky_right_margin_left"
            android:adjustViewBounds="true"
            android:background="@drawable/selector__transparent_image_button"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            style="@style/normalWhiteFontBTN"
            android:id="@+id/b_continue_fingerprints"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:background="@drawable/selector_rounded_button"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="80dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/continue_fingerprints"
            />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
