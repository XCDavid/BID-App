<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/b_continue_form"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ico_sabadell"
                android:scaleType="centerInside" />

            <TextView
                style="@style/normalBlackFont"
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/instructions_form"
                />

            <TextView
                style="@style/normalBlackFont"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/required_text_form"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_vertical_separator_form"
                android:text="@string/name_form"
                android:visibility="gone"
                />

            <EditText
                android:id="@+id/et_name_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:inputType="text"
                android:maxLength="30"
                android:maxLines="1"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_separator_form"
                android:text="@string/last_name_form"
                android:visibility="gone"
                />

            <EditText
                android:id="@+id/et_last_name_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:inputType="textPersonName"
                android:maxLength="30"
                android:maxLines="1"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_mother_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_separator_form"
                android:text="@string/mother_last_name_form"
                android:visibility="gone"
                />

            <EditText
                android:id="@+id/et_mother_last_name_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:inputType="textPersonName"
                android:maxLength="30"
                android:maxLines="1"
                android:visibility="gone"
                />
            <!--TextView
                android:id="@+id/tv_curp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_separator_form"
                android:text="@string/tv_curp_form"
                android:textStyle="bold"/-->
            <EditText
                style="@style/normalBlackFontET"
                android:textSize="20sp"
                android:id="@+id/et_curp_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:inputType="textCapCharacters"
                android:maxLength="18"
                android:maxLines="1"
                android:hint="@string/tv_curp_form"
                android:layout_marginTop="@dimen/vertical_separator_form"/>

            <!--TextView
                android:id="@+id/tv_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_separator_form"
                android:text="@string/mail_form"
                android:textStyle="bold"/-->
            <EditText
                style="@style/normalBlackFontET"
                android:textSize="20sp"
                android:id="@+id/et_mail_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:inputType="textEmailAddress"
                android:maxLength="40"
                android:maxLines="1"
                android:hint="@string/mail_form"
                android:layout_marginTop="@dimen/vertical_separator_form"/>

            <!--TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_separator_form"
                android:text="@string/phone_form"
                android:textStyle="bold"/-->
            <EditText
                style="@style/normalBlackFontET"
                android:textSize="20sp"
                android:id="@+id/et_phone_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:inputType="number|phone"
                android:maxLength="10"
                android:maxLines="1"
                android:hint="@string/phone_form"
                android:layout_marginTop="@dimen/vertical_separator_form"/>

            <TextView
                android:id="@+id/tv_contract_ref_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_separator_form"
                android:text="@string/contract_reference_pay_confirmation"
                android:visibility="gone"
                />

            <EditText
                android:id="@+id/et_contract_ref_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:inputType="number"
                android:maxLength="20"
                android:maxLines="1"
                android:layout_marginBottom="@dimen/vertical_separator_form"
                android:visibility="gone"
                />

            <!--TextView
                android:id="@+id/tv_settings_fingerprint_reader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/tv_product"
                android:textStyle="bold"/-->
            <Spinner
                android:id="@+id/sp_option_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_marginTop="@dimen/vertical_separator_form"
                />

            <Spinner
                android:id="@+id/sp_option_zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_marginTop="@dimen/vertical_separator_form"
                />

        </LinearLayout>
    </ScrollView>

    <Button
        style="@style/normalWhiteFontBTN"
        android:id="@+id/b_continue_form"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_form"
        android:layout_alignParentBottom="true"
        android:text="@string/continue_form"
        android:background="@drawable/selector_primary_button"/>

</RelativeLayout>
