<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/lfm_lay_fingerprint_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/buro"
        android:scaleType="centerCrop"
        android:layout_above="@+id/lay_user_pass_section"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="60dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal">

            <fragment class="com.morpho.contactless.view.fragment.BaseFingerCameraFragment"
                android:id="@+id/fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout="@layout/finger_capture_fragment"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="1.0"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"/>

        </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/lfb_b_login_finger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/b_in_login"
        android:textSize="16sp"
        android:textColor="@color/text_color_white"
        android:background="@drawable/selector_rounded_rectangle_login"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentBottom="true"
        />

    <ImageView
        android:id="@+id/lfb_i_take_image_bio_sdk"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:adjustViewBounds="true"
        android:background="@drawable/selector_image_button"
        app:srcCompat="@drawable/ic_photo_camera_v1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"/>

</RelativeLayout>

