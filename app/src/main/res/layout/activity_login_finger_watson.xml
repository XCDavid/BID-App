<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:src="@drawable/log_sabadell"
        android:scaleType="centerInside"
        android:layout_above="@+id/lay_user_pass_section"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/lfw_lay_fingerprint_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal"
        >

        <ImageView
            android:id="@+id/lfw_image_view_preview"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <Button
            style="@style/normalWhiteFontBTN"
            android:id="@+id/lfw_b_capture_fingerprint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lfw_b_capture_fingerprint"
            android:textColor="@color/text_color_white"
            android:background="@drawable/selector_rounded_rectangle_login"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/lay_user_pass_section"
            />

    </LinearLayout>

    <Button
        style="@style/normalWhiteFontBTN"
        android:id="@+id/lfw_b_login_finger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/b_in_login"
        android:textColor="@color/text_color_white"
        android:background="@drawable/selector_rounded_rectangle_login"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/lfw_lay_fingerprint_section"
        />

</RelativeLayout>
