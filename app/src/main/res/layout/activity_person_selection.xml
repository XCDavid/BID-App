<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="@string/sp_tv_instructions"
          android:textSize="25sp"
          android:textStyle="bold"
          android:textAlignment="center"/>

        <LinearLayout
            android:id="@+id/ly_section_option"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/b_continue_id_scan"
            android:layout_below="@+id/ly_section_result_id_scan"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_top_bottom_id_scan"
            android:paddingTop="@dimen/margin_top_bottom_id_scan">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ps_cl_operator"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_constraint_id_scan"
                    android:layout_marginLeft="@dimen/margin_constraint_id_scan"
                    android:layout_marginRight="@dimen/margin_constraint_id_scan"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="@string/sp_tv_operator"
                    app:layout_constraintBottom_toTopOf="@+id/ps_ib_operator"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <ImageButton
                    android:id="@+id/ps_ib_operator"
                    android:layout_width="@dimen/width_image_button_id_scan"
                    android:layout_height="@dimen/height_image_button_id_scan"
                    android:layout_marginTop="@dimen/margin_top_id_scan"
                    android:adjustViewBounds="true"
                    android:background="@drawable/selector_image_button"
                    android:padding="@dimen/padding_all_image_button_id_scan"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/employee_icon"/>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ps_cl_customer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_constraint_id_scan"
                    android:layout_marginLeft="@dimen/margin_constraint_id_scan"
                    android:layout_marginRight="@dimen/margin_constraint_id_scan"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="@string/sp_tv_customer"
                    app:layout_constraintBottom_toTopOf="@+id/ps_ib_customer"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <ImageButton
                    android:id="@+id/ps_ib_customer"
                    android:layout_width="@dimen/width_image_button_id_scan"
                    android:layout_height="@dimen/height_image_button_id_scan"
                    android:layout_marginTop="@dimen/margin_top_id_scan"
                    android:adjustViewBounds="true"
                    android:background="@drawable/selector_image_button"
                    android:padding="@dimen/padding_all_image_button_id_scan"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/customer_icon"
                    />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
