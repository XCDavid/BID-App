<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp">

       <ImageView
           android:layout_marginTop="20dp"
           android:layout_marginBottom="20dp"
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:src="@drawable/ico_sabadell"
           android:scaleType="centerInside" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_horizontal">

           <ImageView
               android:id="@+id/imageView2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:srcCompat="@drawable/ic_check_circle" />

       </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_message_result_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/titleBlackFont"
            android:textSize="35sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_operation_result_operation"
            android:gravity="center"/>

        <TextView
            style="@style/normalBlackFont"
            android:id="@+id/tv_operation_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hitn_operation_result_operation"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="10dp"/>

        <TextView
            style="@style/titleBlackFont"
            android:textSize="35sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_result_result_operation"
            android:gravity="center"
            android:layout_marginTop="20dp"/>

        <TextView
            style="@style/normalBlackFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_operation_ok_result_operation"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_above="@+id/b_end_result_operation"
        android:layout_marginTop="20dp">

        <Button
            style="@style/normalWhiteFontBTN"
            android:id="@+id/b_contract_generate_result_operation"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textColor="@color/text_color_white"
            android:background="@drawable/selector_rounded_rectangle_login"
            android:layout_weight="1"
            android:text="@string/b_show_contract_result_operation"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <Button
            style="@style/normalWhiteFontBTN"
            android:id="@+id/b_contract_sign_result_operation"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textColor="@color/text_color_white"
            android:background="@drawable/selector_rounded_rectangle_login"
            android:layout_weight="1"
            android:text="@string/b_sign_contract_result_operation"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>

   </LinearLayout>

    <Button
        style="@style/normalWhiteFontBTN"
        android:id="@+id/b_end_result_operation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_form"
        android:layout_alignParentBottom="true"
        android:text="@string/end_result_operation"
        android:textColor="@color/text_color_white"
        android:background="@drawable/selector_primary_button"/>

    <Button
        style="@style/normalWhiteFontBTN"
        android:id="@+id/b_try_again_result_operation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_form"
        android:layout_alignParentBottom="true"
        android:text="@string/message_ws_tray_again"
        android:textColor="@color/text_color_white"
        android:background="@drawable/selector_primary_button"
        android:visibility="gone"/>

</RelativeLayout>
