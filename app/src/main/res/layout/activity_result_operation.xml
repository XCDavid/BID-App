<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_message_result_operation"
        app:srcCompat="@drawable/ic_check_circle"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:id="@+id/ll_message_result_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:paddingBottom="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_operation_result_operation"
            android:gravity="center"
            android:textSize="30sp"
            />
        <TextView
            android:id="@+id/tv_operation_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hitn_operation_result_operation"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_result_result_operation"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_operation_ok_result_operation"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_above="@+id/b_end_result_operation"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/b_contract_generate_result_operation"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:textColor="@color/text_color_white"
            android:background="@drawable/selector_rounded_rectangle_login"
            android:layout_weight="1"
            android:text="@string/b_generate_contract_result_operation" />

    </LinearLayout>

    <Button
        android:id="@+id/b_end_result_operation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_form"
        android:layout_alignParentBottom="true"
        android:text="@string/end_result_operation"
        android:textColor="@color/text_color_white"
        android:background="@drawable/selector_primary_button"/>
    <Button
        android:id="@+id/b_try_again_result_operation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_form"
        android:layout_alignParentBottom="true"
        android:text="@string/message_ws_tray_again"
        android:textColor="@color/text_color_white"
        android:background="@drawable/selector_primary_button"
        android:visibility="gone"/>

</RelativeLayout>
