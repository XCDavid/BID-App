<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_message_result_operation"
        app:srcCompat="@drawable/ic_check_circle"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:id="@+id/ll_message_result_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:paddingBottom="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Operación"
            android:gravity="center"
            android:textSize="30sp"
            />
        <TextView
            android:id="@+id/tv_operation_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="3012213321"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultado"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Operación exitosa"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            />
    </LinearLayout>

    <Button
        android:id="@+id/b_end_result_operation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_form"
        android:layout_alignParentBottom="true"
        android:text="@string/end_result_operation"
        android:textColor="@color/text_color_white"
        android:background="@drawable/selector_primary_button"/>
    <Button
        android:id="@+id/b_try_again_result_operation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_form"
        android:layout_alignParentBottom="true"
        android:text="@string/message_ws_tray_again"
        android:textColor="@color/text_color_white"
        android:background="@drawable/selector_primary_button"
        android:visibility="gone"/>

</RelativeLayout>
