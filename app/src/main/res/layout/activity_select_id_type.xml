<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <Switch
        android:id="@+id/sw_id_provider"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:textOn="Icar"
        android:textOff="MobbScan"
        android:checked="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        >
        <Button
            android:id="@+id/b_ine_select_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_rounded_button"
            android:text="@string/ine_select_id_type"
            android:textStyle="bold"
            android:textColor="@color/text_color_white"
            android:layout_marginBottom="50dp"
            />
        <Button
            android:id="@+id/b_ife_c_select_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_rounded_button"
            android:text="@string/ife_c_select_id_type"
            android:textStyle="bold"
            android:textColor="@color/text_color_white"
            android:layout_marginBottom="50dp"
            />
        <Button
            android:id="@+id/b_ife_d_select_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_rounded_button"
            android:text="@string/ife_d_select_id_type"
            android:textStyle="bold"
            android:textColor="@color/text_color_white"
            android:layout_marginBottom="50dp"
            />
        <Button
            android:id="@+id/b_passport_select_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_rounded_button"
            android:text="@string/pasaporte_select_id_type"
            android:textStyle="bold"
            android:textColor="@color/text_color_white"
            android:layout_marginBottom="50dp"
            />

        <Button
            android:id="@+id/b_licence_select_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_rounded_button"
            android:text="@string/licencia_select_id_type"
            android:textStyle="bold"
            android:textColor="@color/text_color_white"
            android:layout_marginBottom="50dp"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/b_icar_select_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_rounded_button"
            android:text="icar"
            android:textStyle="bold"
            android:textColor="@color/text_color_white"
            android:layout_marginBottom="50dp"
            android:visibility="gone"
            />

    </LinearLayout>

</RelativeLayout>
