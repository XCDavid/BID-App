<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/tv_id_selection_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        android:text="@string/instruction_id_type"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="center"
        />
    <Switch
        android:id="@+id/sw_id_provider"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:textOn="Icar"
        android:textOff="MobbScan"
        android:text="Tipo de tecnologia"
        android:textSize="10sp"
        android:checked="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/tv_id_selection_instructions"
        >
        <Button
            android:id="@+id/b_ine_select_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_rounded_button"
            android:text="@string/ine_select_id_type"
            android:textStyle="bold"
            android:textColor="@color/text_color_white"
            android:layout_marginBottom="50dp"
            />
        <Button
            android:id="@+id/b_ife_c_select_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_rounded_button"
            android:text="@string/ife_c_select_id_type"
            android:textStyle="bold"
            android:textColor="@color/text_color_white"
            android:layout_marginBottom="50dp"
            />
        <Button
            android:id="@+id/b_ife_d_select_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_rounded_button"
            android:text="@string/ife_d_select_id_type"
            android:textStyle="bold"
            android:textColor="@color/text_color_white"
            android:layout_marginBottom="50dp"
            />
        <Button
            android:id="@+id/b_passport_select_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_rounded_button"
            android:text="@string/pasaporte_select_id_type"
            android:textStyle="bold"
            android:textColor="@color/text_color_white"
            android:layout_marginBottom="50dp"
            />

        <Button
            android:id="@+id/b_licence_select_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_rounded_button"
            android:text="@string/licencia_select_id_type"
            android:textStyle="bold"
            android:textColor="@color/text_color_white"
            android:layout_marginBottom="50dp"
            android:visibility="gone"
            />

    </LinearLayout>

</RelativeLayout>
