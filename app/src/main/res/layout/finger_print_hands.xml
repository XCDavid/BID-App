<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wm_fingerprints"
    android:layout_height="450dp"
    android:layout_width ="950dp">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin_all_image_view_fingerprints"
        android:layout_marginEnd="@dimen/margin_all_image_view_fingerprints"
        android:layout_marginLeft="@dimen/margin_all_image_view_fingerprints"
        android:layout_marginRight="@dimen/margin_all_image_view_fingerprints"
        android:layout_marginStart="@dimen/margin_all_image_view_fingerprints"
        android:layout_marginTop="@dimen/margin_all_image_view_fingerprints"
        android:adjustViewBounds="true"
        android:src="@drawable/hands"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:id="@+id/wm_imageView"/>

    <!--Left Arm-->
    <ImageButton
        android:id="@+id/wm_b_thumb_left_arm"
        android:layout_width="54dp"
        android:layout_height="49dp"
        android:layout_marginBottom="141dp"
        android:layout_marginStart="@dimen/thumb_left_margin_left"
        android:adjustViewBounds="true"
        android:background="@drawable/selector__transparent_image_button"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="373dp" />

    <ImageButton
        android:id="@+id/wm_b_index_left_arm"
        android:layout_width="49dp"
        android:layout_height="54dp"
        android:layout_marginBottom="@dimen/index_left_margin_bottom"
        android:layout_marginStart="@dimen/index_left_margin_left"
        android:adjustViewBounds="true"
        android:background="@drawable/selector__transparent_image_button"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/wm_b_middle_left_arm"
        android:layout_width="49dp"
        android:layout_height="54dp"
        android:layout_marginBottom="@dimen/middle_left_margin_bottom"
        android:layout_marginStart="@dimen/middle_left_margin_left"
        android:adjustViewBounds="true"
        android:background="@drawable/selector__transparent_image_button"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/wm_b_ring_left_arm"
        android:layout_width="49dp"
        android:layout_height="54dp"
        android:layout_marginBottom="@dimen/ring_left_margin_bottom"
        android:layout_marginStart="@dimen/ring_left_margin_left"
        android:adjustViewBounds="true"
        android:background="@drawable/selector__transparent_image_button"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/wm_b_pinky_left_arm"
        android:layout_width="49dp"
        android:layout_height="54dp"
        android:layout_marginBottom="@dimen/pinky_left_margin_bottom"
        android:layout_marginStart="@dimen/pinky_left_margin_left"
        android:adjustViewBounds="true"
        android:background="@drawable/selector__transparent_image_button"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="75dp" />

    <!--Right Arm-->
    <ImageButton
        android:id="@+id/wm_b_thumb_right_arm"
        android:layout_width="54dp"
        android:layout_height="49dp"
        android:layout_marginBottom="@dimen/thumb_left_margin_bottom"
        android:layout_marginEnd="@dimen/thumb_right_margin_left"
        android:adjustViewBounds="true"
        android:background="@drawable/selector__transparent_image_button"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/wm_b_index_right_arm"
        android:layout_width="49dp"
        android:layout_height="54dp"
        android:layout_marginBottom="@dimen/index_left_margin_bottom"
        android:layout_marginEnd="@dimen/index_right_margin_left"
        android:adjustViewBounds="true"
        android:background="@drawable/selector__transparent_image_button"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/wm_b_middle_right_arm"
        android:layout_width="49dp"
        android:layout_height="54dp"
        android:layout_marginBottom="@dimen/middle_left_margin_bottom"
        android:layout_marginEnd="@dimen/middle_right_margin_left"
        android:adjustViewBounds="true"
        android:background="@drawable/selector__transparent_image_button"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/wm_b_ring_right_arm"
        android:layout_width="49dp"
        android:layout_height="54dp"
        android:layout_marginBottom="@dimen/ring_left_margin_bottom"
        android:layout_marginEnd="@dimen/ring_right_margin_left"
        android:adjustViewBounds="true"
        android:background="@drawable/selector__transparent_image_button"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/wm_b_pinky_right_arm"
        android:layout_width="49dp"
        android:layout_height="54dp"
        android:layout_marginBottom="@dimen/pinky_left_margin_bottom"
        android:layout_marginEnd="@dimen/pinky_right_margin_left"
        android:adjustViewBounds="true"
        android:background="@drawable/selector__transparent_image_button"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/image_view_preview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="425dp"
        android:layout_marginBottom="27dp" />

</android.support.constraint.ConstraintLayout>